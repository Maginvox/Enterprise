    "version": "0.2.0",
    "configurations": [
        {
            "name": "Windows CPPDBG Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Tests/Example/Debug/EnterpriseExample.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Tests/Example",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "Linux GDB Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Tests/Example/EnterpriseExample",
            "args": [
                "--RenderAPI=0.4232"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/Tests/Example",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}